<%= Rouge::Themes::Github.render(:scope => '.highlight') %>
.highlight{
  display: flex;
  padding: 3px 5px;
  width: 99%;
  border: 1px solid #6d6d6d;
  border-radius: 4px;
  .highlight{
    display: flex;
    border: none;
    width: 100%;
  }
}

.text-messages{
  a:link{
    color: #0080ff;
    text-decoration: none;
  }
  a:visited{
    color: #6600ff;
  }
  a:hover{
    text-decoration: underline;
  }
}
