<div class="rooms">
  <div class="content-column">
    <div class="title">カテゴリ別ルーム一覧（<%= @category %>）</div>
  </div>
  <% @rooms.each do |room| %>
    <div class="room"> 
      <div class="room-image">
        <% if room.image.length > 0 || room.image != nil %>
          <img src = "<%= room.image %>" class="room-image">
        <% else %>
          <img src = "/room_image/default.png" class="room-image">
        <% end %>
      </div>
      <%= room.name %>
      <%= date_format(room.created_at)%>
      <%= link_to "参加", room_join_path(room.id), "data-turbo": false %>
    </div>
  <% end %>
  <% if @rooms_joined.length > 0 || @room_joined != nil %>
    <div class="content-column">
    <div class="title">参加中のルーム</div>
    </div>
  <% end %>
  <% @rooms_joined.each do |room| %>
    <%= link_to room_page_path(room.id) do %>
      <div class="room"> 
        <div class="room-image">
          <% if room.image.length > 0 || room.image != nil %>
            <img src = "<%= room.image %>" class="room-image">
          <% else %>
            <img src = "/room_image/default.png" class="room-image">
          <% end %>
        </div>
        <%= room.name %>
        <%= date_format(room.created_at) %>
      </div>
    <% end %>
  <% end %>
</div>
<%= link_to "戻る", request.referer %>