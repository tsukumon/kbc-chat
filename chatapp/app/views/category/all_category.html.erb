<div class="rooms">
  <% @rooms_all.each do |room| %>
    <% category = @rooms_all_hash[room.id] %>
        <div class="room"> 
            <div class="room-image">
              <% if category["image"] != nil %>
                <img src = "<%= category["image"] %>" class="room-image">
              <% else %>
                <img src = "/room_image/default.png" class="room-image">
              <% end %>
            </div>
            <%= category["name"] %>
            <%= date_format(category["created_at"])%>
            <%= link_to "参加", room_join_path(room.id), "data-turbo": false %>
            <%= category["category"] %>
        </div>
  <% end %>
</div>
<%= link_to "戻る", "/room" %>