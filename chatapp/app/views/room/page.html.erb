<% if @messages != nil %>
  <% @messages.each do |message| %>
    <%= message.sentence %>
    <% if message.created_at > 1.days.ago %>
     今日<%= message.created_at.strftime("%H:%M") %>
    <% else %>
     <%= message.created_at.strftime("%Y/%m/%d") %>
    <% end %>
  <% end %>
<% end %>
